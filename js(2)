function getTimestamp() {
    const now = new Date();
    const options = { 
        month: 'short', 
        day: 'numeric', 
        year: 'numeric', 
        hour: '2-digit', 
        minute: '2-digit',
        hour12: true 
    };
    return now.toLocaleString('en-US', options);
}

// Example usage inside your deposit/withdraw function:
function handleTransaction(type, amount) {
    const time = getTimestamp();
    const historyList = document.getElementById('transaction-history');
    
    // Create a new list item or table row
    const entry = document.createElement('div');
    entry.className = 'history-item';
    entry.innerHTML = `
        <span class="date">${time}</span>
        <span class="type">${type}</span>
        <span class="amount">${type === 'Deposit' ? '+' : '-'} â‚¹${amount}</span>
    `;
    
    historyList.prepend(entry); // Adds the newest transaction to the top
}
